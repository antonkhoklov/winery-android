<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/splash_bg"
    android:layout_gravity="center_vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/serch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/price_bg"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:drawableStart="@drawable/close_sym"/>
        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:drawableStart="@drawable/setting_logo"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/serch"
        android:layout_marginBottom="60dp"
        tools:ignore="NotSibling">

    </FrameLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_ADs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ads_logo"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/fab_Festival"
        android:layout_marginBottom="100dp"
        app:backgroundTint="#dd888888"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_Festival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/festival_logo"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/fab_Tour"
        android:layout_marginBottom="100dp"
        app:backgroundTint="#dd888888"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_Tour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/tour_logo"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/fab_Event"
        android:layout_marginBottom="100dp"
        app:backgroundTint="#dd888888"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_Event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/event_logo"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/fab_Winery"
        android:layout_marginBottom="100dp"
        app:backgroundTint="#dd888888"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_Winery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/winery_logo"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/fab_My"
        android:layout_marginBottom="100dp"
        app:backgroundTint="#dd888888"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_My"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/my_logo"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/bottom_navigation"
        android:layout_marginBottom="100dp"
        app:backgroundTint="#dd888888"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/price_bg"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/navigation"
        />

</RelativeLayout>